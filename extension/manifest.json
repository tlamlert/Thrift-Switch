{
  "manifest_version": 2,
  "name": "Thrift Switch",
  "description": "Providing sustainable alternative of clothes from thrift stores",
  "version": "1.1",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
      "matches":["*://*/*"]
      }
  ],
  "icons": { "16": "icon.png",
    "48": "icon.png",
   "128": "icon.png" }
}
